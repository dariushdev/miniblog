<form>
    {% for p in post %}
    <div class="form-group">
            <label>Email address</label>
            <input type="email" class="form-control col-md-6" name="email" id="email">
            <label>Name</label>
            <input type="name" class="form-control col-md-6" name="name" id="name">
            <label>Comment</label>
            <textarea type="comment" class="form-control col-md-6" name="comment" id="comment"></textarea>
            <button type="button" onclick="postComment('{{ p.id }}')" class="btn btn-secondary btn-sm mt-4">Submit</button>
    </div>
    {% endfor %}
</form>

<script>
    function postComment(id) {
        var name = $("#name").val();
        var email = $("#email").val();
        var comment = $("#comment").val();
        console.log(comment)
        $.ajax({
            type: "POST",
            url: '/comment/create/' + id,
            async: true,
            data: { name: name, email: email, comment: comment },
            success: function () {
                location.reload();
            }
        });
    }
</script>
